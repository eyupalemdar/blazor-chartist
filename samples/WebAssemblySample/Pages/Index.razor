@page "/"

<h1>Hello, world!</h1>

<Chart Type="ChartType.Bar" Data="sampleData" Labels="@labels"></Chart>
<Chart Type="ChartType.Line" Data="sampleData" Labels="@labels"></Chart>

@code {
    private static string[] labels = new string[] { "Jan", "Feb", "Mar", "Apr", "May" };
    private static double[] oilPrices = new double[] { 51, 55, 68, 52, 51 };
    private static double[] trumpTweets = new double[] { 35, 19, 26, 68, 21 };

    private ChartData sampleData = new ChartData
    {
        Series = new List<SeriesData>
        {
            new SeriesData() { Name = "Crud oil prices ($)", Data = oilPrices },
            new SeriesData() { Name = "Trump tweets", Data = trumpTweets },
        }
    };
}