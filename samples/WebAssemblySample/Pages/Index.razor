@page "/"

<h1>Hello, world!</h1>

<Chart Type="ChartType.Bar" Labels="@labels">
    <Series Name="Oil prices" Values="@oilPrices"></Series>
    <Series Name="Trump tweets" Values="@trumpTweets"></Series>
</Chart>

<Chart Type="ChartType.Line" Labels="@labels">
    <Series Name="Oil prices" Values="@oilPrices"></Series>
</Chart>

@code {
    private static string[] labels = new string[] { "Jan", "Feb", "Mar", "Apr", "May" };
    private static double[] oilPrices = new double[] { 51, 55, 68, 52, 51 };
    private static double[] trumpTweets = new double[] { 35, 19, 26, 68, 21 };
}